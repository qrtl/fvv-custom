<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="purchase_line_image">
        <t t-foreach="images" t-as="image">
            <tr>
                <td style="border: 0;">
                    <span t-field="image.name" />
                </td>
                <td colspan="99" style="border: 0;">
                    <div style="text-align: center;">
                        <img
                            t-att-src="image_data_uri(image.image_1920)"
                            style="max-height: 200px; padding-top: 10px;"
                        />
                    </div>
                </td>
            </tr>
        </t>
    </template>
    <template
        id="report_purchaseorder_document"
        inherit_id="purchase.report_purchaseorder_document"
    >
        <xpath expr="//td[@id='product']/../.." position="after">
            <t
                t-set="images"
                t-value="line.purchase_request_lines.mapped('item_image_ids')"
            />
            <t t-if="images">
                <t t-call="purchase_report_image.purchase_line_image" />
            </t>
        </xpath>
    </template>
    <template
        id="report_purchasequotation_document"
        inherit_id="purchase.report_purchasequotation_document"
    >
        <xpath expr="//td[@id='product']/../.." position="after">
            <t
                t-set="images"
                t-value="order_line.purchase_request_lines.mapped('item_image_ids')"
            />
            <t t-if="images">
                <t t-call="purchase_report_image.purchase_line_image" />
            </t>
        </xpath>
    </template>
</odoo>
