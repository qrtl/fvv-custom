<?xml version="1.0" ?>
<odoo>
    <record id="view_item_image_form" model="ir.ui.view">
        <field name="name">item.image.view.form</field>
        <field name="model">item.image</field>
        <field name="arch" type="xml">
            <form string="Item Image">
                <field name="sequence" invisible="1" />
                <div class="row o_purchase_request_image_modal">
                    <div class="col-md-6 col-xl-5">
                        <label for="name" string="Image Name" />
                        <h2><field name="name" placeholder="Image Name" /></h2>
                        <field name="product_id" />
                    </div>
                    <div
                        class="col-md-6 col-xl-7 text-center o_purchase_request_image_modal_container"
                    >
                        <div class="row">
                            <div class="col">
                                <field name="image_1920" widget="image" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>
    <record id="view_item_image_tree" model="ir.ui.view">
        <field name="name">item.image.view.tree</field>
        <field name="model">item.image</field>
        <field name="arch" type="xml">
            <tree string="Item Images">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="product_id" />
                <field name="image_128" widget="image" />
            </tree>
        </field>
    </record>
    <record id="item_image_view_kanban" model="ir.ui.view">
        <field name="name">item.image.view.kanban</field>
        <field name="model">item.image</field>
        <field name="arch" type="xml">
            <kanban string="Item Images" default_order="sequence">
                <field name="id" />
                <field name="name" />
                <field name="product_id" />
                <field name="image_1920" />
                <field name="sequence" widget="handle" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="card oe_kanban_global_click p-0">
                            <div class="o_squared_image">
                                <img
                                    class="card-img-top"
                                    t-att-src="kanban_image('item.image', 'image_1920', record.id.value)"
                                    t-att-alt="record.name.value"
                                />
                            </div>
                            <div class="card-body p-0">
                                <h4 class="card-title p-2 m-0 bg-200">
                                    <small><field name="name" /></small>
                                    <small><field name="product_id" /></small>
                                </h4>
                            </div>
                            <!-- below 100 Kb: good -->
                            <t t-if="record.image_1920.raw_value.length &lt; 100*1000">
                                <t t-set="size_status" t-value="'badge-success'" />
                                <t t-set="message">Acceptable file size</t>
                            </t>
                            <!-- below 1000 Kb: decent -->
                            <t
                                t-elif="record.image_1920.raw_value.length &lt; 1000*1000"
                            >
                                <t t-set="size_status" t-value="'badge-warning'" />
                                <t
                                    t-set="message"
                                >Huge file size. The image should be optimized/reduced.</t>
                            </t>
                            <!-- above 1000 Kb: bad -->
                            <t t-else="1">
                                <t t-set="size_status" t-value="'badge-danger'" />
                                <t
                                    t-set="message"
                                >Optimization required! Reduce the image size or increase your compression settings.</t>
                            </t>
                            <span
                                t-attf-class="badge #{size_status} o_item_image_size"
                                t-esc="record.image_1920.value"
                                t-att-title="message"
                            />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="view_item_image_search" model="ir.ui.view">
        <field name="name">item.image.select</field>
        <field name="model">item.image</field>
        <field name="arch" type="xml">
            <search string="Search Item Images">
                <field name="name" />
                <field name="product_id" />
                <group expand="0" string="Group By...">
                    <filter
                        string="Product"
                        name="productgroup"
                        context="{'group_by': 'product_id'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="action_item_image" model="ir.actions.act_window">
        <field name="name">Item Images</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">item.image</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>
    <menuitem
        id="menu_item_image"
        name="Item Images"
        parent="purchase_request.parent_menu_purchase_request"
        action="action_item_image"
        groups="purchase_request.group_purchase_request_user"
    />
</odoo>
